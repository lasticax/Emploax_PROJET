{% extends 'base.html.twig' %}

{% block title %}SIMON{% endblock %}

{% block body %}
<section class="articles">
{% for article in articles %}
<article>
    <h2>{{ article.title }}</h2>
    <div class="metadata"> Ecrit le {{ article.CreatedAt | date('d/m/Y')}} Ã   {{ article.createdAt | date('H:i') }}</div>
    <div class="content">
        <img src="{{article.image}}" alt="">
        <p>{{article.content | raw}}</p>
        <a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suite</a>
        <a href="{{ path('blog_edit', {'id': article.id}) }}" class="btn btn-warning">Modifier</a>
    </div>
</article>
{% endfor %}
</section>
{% endblock %}
